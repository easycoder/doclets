#!/bin/sh

# This file goes in your ~/bin folder, assuming it's on your $PATH.
# Otherwise, change the next line.

cd ~/bin
pip install -U easycoder
rm ec_doclets.py docletServer.ecs docletServer.py
wget https://raw.githubusercontent.com/easycoder/doclets/refs/heads/main/docletServer.py
wget https://raw.githubusercontent.com/easycoder/doclets/refs/heads/main/docletServer.ecs
wget https://raw.githubusercontent.com/easycoder/doclets/refs/heads/main/ec_doclets.py
python3 docletServer.py
